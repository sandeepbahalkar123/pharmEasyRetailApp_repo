<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightgreycolor_billingdetails">

    <LinearLayout
        android:id="@+id/productslistlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/productName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.2"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="@dimen/dp15"
            android:paddingStart="@dimen/dp15"
            android:textColor="@color/searchProducts_HighligtedTextColor"
            android:textSize="@dimen/sp15"
            tools:text="1.Antab 5mg Tab 10's" />

        <View
            android:layout_width="@dimen/dp1"
            android:layout_height="@dimen/dp40"
            android:background="@color/dividercolor_billingdetails" />


        <TextView
            android:id="@+id/quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_weight="0.4"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="@dimen/dp10"
            android:paddingStart="@dimen/dp10"
            android:textColor="@color/qtyAmountTextColor_billingdetails"
            android:textSize="@dimen/sp13"
            tools:text="1130" />

        <View
            android:layout_width="@dimen/dp1"
            android:layout_height="@dimen/dp40"
            android:background="@color/dividercolor_billingdetails" />


        <TextView
            android:id="@+id/amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_weight="0.5"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="@dimen/dp10"
            android:paddingStart="@dimen/dp10"
            android:textColor="@color/qtyAmountTextColor_billingdetails"
            android:textSize="@dimen/sp13"
            tools:text="32440.00" />
    </LinearLayout>


</RelativeLayout>