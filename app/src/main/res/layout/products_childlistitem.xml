<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/daybooklightgreycolor">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/dp15"
        android:paddingStart="@dimen/dp15"
        android:paddingTop="@dimen/dp8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/batchInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/mrp"
                android:layout_toStartOf="@+id/mrp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/searchProducts_HighligtedTextColor"
                android:textSize="@dimen/sp16"
                tools:text="Batch No : 2398" />

            <TextView
                android:id="@+id/editTextQty"
                android:layout_width="@dimen/dp48"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/roboto_bold"
                android:gravity="end"
                android:paddingEnd="@dimen/dp4"
                android:paddingStart="@dimen/dp4"
                android:textColor="@color/searchProducts_HighligtedTextColor"
                android:textSize="@dimen/sp16"
                tools:text="1" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp1"
                android:layout_alignEnd="@+id/editTextQty"
                android:layout_alignLeft="@+id/editTextQty"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/editTextQty"
                android:layout_alignStart="@+id/editTextQty"
                android:layout_below="@+id/editTextQty"
                android:background="@color/searchProducts_HighligtedTextColor" />

            <TextView
                android:id="@+id/stock"
                android:layout_width="@dimen/dp75"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/batchInfo"
                android:layout_toLeftOf="@+id/editTextQty"
                android:layout_toStartOf="@+id/editTextQty"
                android:fontFamily="@font/roboto_bold"
                android:gravity="end"
                android:paddingEnd="@dimen/dp14"
                android:paddingStart="@dimen/dp14"
                android:textColor="@color/searchProducts_HighligtedTextColor"
                android:textSize="@dimen/sp16"
                tools:text="60000" />

            <TextView
                android:id="@+id/mrp"
                android:layout_width="@dimen/dp100"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/batchInfo"
                android:layout_toLeftOf="@+id/stock"
                android:layout_toStartOf="@+id/stock"
                android:fontFamily="@font/roboto_bold"
                android:gravity="end"
                android:paddingEnd="@dimen/dp5"
                android:paddingStart="@dimen/dp5"
                android:textColor="@color/searchProducts_HighligtedTextColor"
                android:textSize="@dimen/sp16"
                tools:text="600000.99" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp3">

            <TextView
                android:id="@+id/expiryDateInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/productsList_unitTextColor"
                android:textSize="@dimen/sp11"
                tools:text="MSU - 09/18 - " />

            <TextView
                android:id="@+id/packingType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/expiryDateInfo"
                android:layout_toRightOf="@+id/expiryDateInfo"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/productsList_unitTextColor"
                android:textSize="@dimen/sp11"
                tools:text="Tab" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp3">

            <TextView
                android:id="@+id/estimatedPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:paddingEnd="@dimen/dp6"
                android:paddingRight="@dimen/dp6"
                android:text="@string/salePrice"
                android:textColor="@color/productsList_unitTextColor"
                android:textSize="@dimen/sp11" />

            <TextView
                android:id="@+id/estimatedPriceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/estimatedPrice"
                android:layout_toRightOf="@+id/estimatedPrice"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/searchProducts_HighligtedTextColor"
                android:textSize="@dimen/sp11"
                tools:text="Rs 34.00" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@+id/mainLayout"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/dividercolor" />

</RelativeLayout>