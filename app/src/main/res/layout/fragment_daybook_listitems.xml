<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/daybooklightgreycolor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/daybooklightgreycolor"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/particularName"
            android:layout_width="@dimen/dp90"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp23"
            android:layout_weight="0.4"
            android:fontFamily="@font/roboto_regular"
            android:paddingBottom="@dimen/dp7"
            android:paddingTop="@dimen/dp7"
            android:text="@string/cashSale"
            android:textColor="@color/dayBookTextColor"
            android:textSize="@dimen/sp15" />

        <View
            android:layout_width="@dimen/dp1"
            android:layout_height="@dimen/dp34"
            android:background="@color/dividercolor" />

        <TextView
            android:id="@+id/debitValue"
            android:layout_width="@dimen/dp44"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_weight="0.6"
            android:fontFamily="@font/roboto_regular"
            android:text="2000.00"
            android:textColor="@color/dayBookTextColor"
            android:textSize="@dimen/sp15" />

        <View
            android:layout_width="@dimen/dp1"
            android:layout_height="@dimen/dp34"
            android:background="@color/dividercolor" />

        <TextView
            android:id="@+id/creditValue"
            android:layout_width="@dimen/dp44"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="@dimen/dp20"
            android:text=""
            android:textColor="@color/dayBookTextColor"
            android:textSize="@dimen/sp15" />
    </LinearLayout>


</RelativeLayout>