<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/mainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginRight="@dimen/dp19">

            <TextView
                android:id="@+id/productname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/searchProducts_HighligtedTextColor"
                android:textSize="@dimen/sp16"
                tools:text="Combiflam" />

            <TextView
                android:id="@+id/unit"
                android:layout_alignBaseline="@+id/productname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/productname"
                android:fontFamily="@font/roboto_bold"
                android:paddingLeft="@dimen/dp5"
                android:textColor="@color/productsList_unitTextColor"
                android:textSize="@dimen/sp12"
                tools:text="20's Tab - Strip" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginTop="@dimen/dp3"
            android:layout_marginRight="@dimen/dp19">

            <TextView
                android:id="@+id/contentInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/searchProducts_expiryDateTextColor"
                android:textSize="@dimen/sp12"
                tools:text="Ibuprofen/paracetamol" />

            <TextView
                android:id="@+id/qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/searchProducts_HighligtedTextColor"
                android:textSize="@dimen/sp13"
                android:text="@string/quantity" />

            <TextView
                android:id="@+id/stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/qty"
                android:fontFamily="@font/roboto_bold"
                android:paddingRight="@dimen/dp40"
                android:textColor="@color/searchProducts_HighligtedTextColor"
                android:textSize="@dimen/sp13"
                android:text="@string/stock" />

        </RelativeLayout>


        <!--<View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginTop="@dimen/dp8"
            android:background="@color/dividercolor" />-->


    </LinearLayout>


</RelativeLayout>