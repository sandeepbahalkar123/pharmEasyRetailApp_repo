<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/medicineIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp15"
        android:src="@drawable/default_icon" />

    <LinearLayout
        android:id="@+id/mainlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/medicineIcon"
        android:layout_toRightOf="@id/medicineIcon"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10">

            <TextView
                android:id="@+id/productname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/shortBookTextColor"
                android:textSize="@dimen/sp13"
                tools:text="Combiflam 400mg" />

            <TextView
                android:id="@+id/unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/productname"
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="@dimen/dp5"
                android:textColor="@color/shortBookTextColor"
                android:textSize="@dimen/sp13"
                tools:text="10 Tab's" />


            <TextView
                android:id="@+id/totalQTY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/dp45"
                android:layout_marginRight="@dimen/dp45"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/shortBookTextColor"
                android:textSize="@dimen/sp15"
                tools:text="50" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/middlelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp3">

            <TextView
                android:id="@+id/noOfQtyTabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/shortBookTextColor"
                android:textSize="@dimen/sp11"
                tools:text="5 Tab-Strips" />

            <TextView
                android:id="@+id/avlStockStrips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/noOfQtyTabs"
                android:layout_toRightOf="@+id/noOfQtyTabs"
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="@dimen/dp5"
                android:textColor="@color/shortBookTextColor"
                android:textSize="@dimen/sp11"
                tools:text="[ Avl Stk:100 ]" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/compShortCodelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp3">

            <TextView
                android:id="@+id/compShortName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/shortBookTextColor"
                android:textSize="@dimen/sp11"
                tools:text="SVF - DVP" />

            <TextView
                android:id="@+id/noOfQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/compShortName"
                android:fontFamily="@font/roboto_regular"
                android:paddingLeft="@dimen/dp5"
                android:textColor="@color/shortBookTextColor"
                android:textSize="@dimen/sp11"
                tools:text="5 Tab-Strips" />

            <TextView
                android:id="@+id/avlStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/noOfQty"
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="@dimen/dp5"
                android:textColor="@color/dayBookTextColor"
                android:textSize="@dimen/sp11"
                tools:text="[ Avl Stk:100 ]" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_below="@+id/mainlayout"
        android:layout_marginTop="@dimen/dp8"
        android:background="@color/dividercolor_billingdetails" />

</RelativeLayout>