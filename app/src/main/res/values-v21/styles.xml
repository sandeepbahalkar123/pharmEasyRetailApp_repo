<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TransparentProgressDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppLoginNewMainStyle">
        <item name="android:textCursorDrawable">@drawable/cursor_color_themecolor</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">@dimen/dp4</item>
        <item name="android:gravity">bottom|left</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColorHint">@color/themecolor</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp17</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp38</item>
    </style>

    <style name="AddressDetailsStyle">
        <item name="android:textCursorDrawable">@drawable/cursor_color_themecolor</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">@dimen/dp4</item>
        <item name="android:gravity">bottom|left</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColorHint">@color/themecolor</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp30</item>
    </style>

    <style name="SaleProductsQuantityStyle">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color_batchquantitycolor</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">@dimen/dp0</item>
        <item name="android:gravity">bottom|left</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColorHint">@color/searchProducts_HighligtedTextColor</item>
        <item name="android:textColor">@color/searchProducts_HighligtedTextColor</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:layout_width">@dimen/dp28</item>
        <item name="android:layout_height">@dimen/dp18</item>
    </style>

    <style name="BillDiscountStyle">
        <item name="android:textCursorDrawable">@drawable/cursor_color_batchquantitycolor</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">@dimen/dp0</item>
        <item name="android:gravity">bottom|left</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColorHint">@color/searchProducts_HighligtedTextColor</item>
        <item name="android:textColor">@color/searchProducts_HighligtedTextColor</item>
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:layout_width">@dimen/dp50</item>
        <item name="android:layout_height">@dimen/dp18</item>
    </style>

</resources>
